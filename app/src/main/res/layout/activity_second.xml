<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/tituloSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Pantalla Second"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/textoChatSecond"
        android:layout_width="353dp"
        android:layout_height="185dp"
        android:layout_gravity="center"
        android:background="#D6BDBD"
        android:gravity="center" />

    <EditText
        android:id="@+id/mensajeAEnviarPorSecond"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:gravity="center|start|top"
        android:hint="Escriba aquÃ­ su texto"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:textColorHint="#8D6E63"
        android:autofillHints="" />

    <Button
        android:id="@+id/botonEnviarSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Enviar" />

</LinearLayout>